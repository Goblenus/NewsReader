<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/navigation_action_bar"
        layout="@layout/navigation_action_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/chooseLanguageText"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:text="@string/language"
        app:layout_constraintStart_toStartOf="@+id/navigation_action_bar"
        app:layout_constraintTop_toBottomOf="@+id/navigation_action_bar" />

    <TextView
        android:id="@+id/chooseLanguageView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/chooseLanguageText"
        app:layout_constraintTop_toBottomOf="@+id/navigation_action_bar"
        android:onClick="chooseLanguage"/>

</androidx.constraintlayout.widget.ConstraintLayout>